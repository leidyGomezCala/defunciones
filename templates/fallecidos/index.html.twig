{% extends 'base.html.twig' %} {% block title %}Hello FallecidosController!{%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container">
        <div class="table-responsive">
          <table
            id="tableDataFallecidos"
            class="table table-striped table-bordered"
            cellspacing="0"
            width="100%"
          >
            <thead>
              <tr>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Municipio</th>
                <th>Sitio Defunción</th>
                <th>Institución</th>
                <th>Tipo Defunción</th>
                <th>Causa Directa</th>
                <th>Administradora Seguridad</th>
                <th>Ver</th>
                <th>Editar</th>
              </tr>
            </thead>
            <tbody>
              {% for fallecido in fallecidos %}
              <tr>
                <td>
                  {{ fallecido.edad }}
                </td>
                <td>
                  {{ fallecido.genero }}
                </td>
                <td>
                  {{ fallecido.municipio }}
                </td>
                <td>
                  {{ fallecido.sitio_defuncion }}
                </td>
                <td>
                  {{ fallecido.institucion }}
                </td>
                <td>
                  {{ fallecido.tipo_defuncion }}
                </td>
                <td>
                  {{ fallecido.Causa_directa }}
                </td>
                <td>
                  {{ fallecido.administradora }}
                </td>
                <td>
                  <a href="/fallecido/{{fallecido.id_fallecido}}" class="btn btn-success">Ver</a>
                </td>
                <td>
                  <a href="/editFallecido/{{fallecido.id_fallecido}}" class="btn btn-danger">Editar</a>
                </td>
              </tr>
              {% endfor %}
            </tbody>
            <tfoot>
              <tr>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Municipio</th>
                <th>Sitio Defunción</th>
                <th>Institución</th>
                <th>Tipo Defunción</th>
                <th>Causa Directa</th>
                <th>Administradora Seguridad</th>
                <th>Ver</th>
                <th>Editar</th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
<script>

  let tableDataFallecidos = $('#tableDataFallecidos').DataTable({
    "ordering": false,
    "columnDefs": [
    ],
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json",
    }
  });

</script>
{% endblock %}
